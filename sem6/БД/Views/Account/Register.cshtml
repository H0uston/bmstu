@model DistanceLearning.ViewModels.RegisterModel
    <div class="validation-registration">
        <h2 class="registration">Регистрация</h2>
        @if (!(ViewData.ModelState["user_exist"] is null))
        {
            <form id="registration" class="validation-form form model_invalid model" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div class="validation-folder">
                    <p class="model__error-msg">@Html.ValidationMessage("user_exist")</p>
                    <p class="form__error-msg">Форма содержит ошибки</p>
                    <div>
                        <input class="text-folder letters"
                               type="text" asp-for="name"
                               placeholder="ФИО *"
                               required
                               data-validator="letters" />
                        <span asp-validation-for="name" />
                    </div>
                    <div>
                        <input class="text-folder"
                               type="text"
                               asp-for="Email"
                               placeholder="Электропочта"
                               required
                               data-validator="email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div>
                        <input class="text-folder"
                               asp-for="BirthDate"
                               type="text"
                               placeholder="Дата Рождения ДД.ММ.ГГ"
                               data-validator="date" />
                    </div>
                    <div>
                        <select style="text-align-last: center" asp-for="University" asp-items="ViewBag.Universities">
                            <option value="0">--Выберите ВУЗ--</option>
                        </select>
                    </div>
                    <div>
                        <input class="text-folder password"
                               asp-for="Password"
                               placeholder="Пароль *"
                               required />
                        <span asp-validation-for="Password" />
                    </div>
                    <div>
                        <input class="text-folder confirm-password"
                               asp-for="ConfirmPassword"
                               placeholder="Повторите пароль *"
                               required />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-dark"
                               type="submit"
                               value="Регистрация" />
                    </div>
                </div>
            </form>
        }
        else
        {
            <form id="registration" class="validation-form form" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div class="validation-folder">
                    <p class="form__error-msg">Форма содержит ошибки</p>
                    <div>
                        <input class="text-folder letters"
                               type="text" asp-for="name"
                               placeholder="ФИО *"
                               required
                               data-validator="letters" />
                        <span asp-validation-for="name" />
                    </div>
                    <div>
                        <input class="text-folder"
                               type="text"
                               asp-for="Email"
                               placeholder="Электропочта"
                               required
                               data-validator="email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div>
                        <input class="text-folder"
                               asp-for="BirthDate"
                               type="text"
                               placeholder="Дата Рождения ДД.ММ.ГГ"
                               data-validator="date" />
                    </div>
                    <div>
                        <select style="text-align-last: center" class="text-center" asp-for="University" asp-items="ViewBag.Universities">
                            <option value="0">--Выберите ВУЗ--</option>
                        </select>
                    </div>
                    <div>
                        <input class="text-folder password"
                               asp-for="Password"
                               placeholder="Пароль *"
                               required />
                        <span asp-validation-for="Password" />
                    </div>
                    <div>
                        <input class="text-folder confirm-password"
                               asp-for="ConfirmPassword"
                               placeholder="Повторите пароль *"
                               required />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-dark"
                               type="submit"
                               value="Регистрация" />
                    </div>
                </div>
            </form>
        }

    </div>

<script src="~/js/site.js"></script>
<script>
    // Вызов валидатора формы
    validateForm({
        formId: 'registration',
        formValidClass: 'form_valid',
        formInvalidClass: 'form_invalid',
        modelInvalidClass: 'model_invalid',

        inputErrorClass: 'input_error'
    });
</script>